<!DOCTYPE html>
    <head>
        <title>
            RPI Room Finder
        </title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css">
        <link rel="stylesheet" href="/public/css/main.css">
        <meta charset="utf-8">
    </head>

    <body ng-app = "roomFinder" ng-controller="displayController">
        <!-- web nav bar -->

        <nav class="ui inverted menu">
            <h3><a class="header item" href = "/home" style="margin-bottom: -16px;">RPI Room Finder</a></h3>
            <span class="right floated text item">
                <a href="/authenticate">Welcom, Admin</a>
            </span>
        </nav>



        <div class="ui grid sub-page">
            <a href="/admin" class = "ui button">Back</a>
            <div class = "row">

                <form ng-submit="reserve()" class = "ui form" style = "margin: auto;">
                 <h4 class="ui dividing header">Reservations Addition</h4>
                  <div class="field">
                    <label for="track">Location Key</label>
                    <input type="text" class="form-control" id="track" ng-model="formData.locationkey" placeholder="Enter location key">
                  </div>
                  <div class="field">
                    <label for="track">Room Key</label>
                    <input type="text" class="form-control" id="track" ng-model="formData.roomkey" placeholder="Enter room key">
                  </div>
                  <div class="field">
                    <label for="track">Time Slot</label>
                    <input type="text" class="form-control" id="track" ng-model="formData.timeslot" placeholder="Enter time slot">
                  </div>
                  <div class="field">
                    <label for="tweet">Day</label>
                    <input type="text" class="form-control" id="tweet" ng-model="formData.day" placeholder="Enter day">
                  </div>
                  <button type="submit" class="ui button">Submit</button>
                </form>
            </div>



        </div>
        <!-- jquery -->
        <script src="/public/js/jquery.min.js"></script>
        <script src="/public/js/tether.min.js"></script>
        <!-- semantic-ui -->
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.js"></script>
        <!-- angular -->
        <script src="/public/js/angular.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular-resource.min.js"></script>
        <!-- angular router -->
        <script src="//unpkg.com/@uirouter/angularjs/release/angular-ui-router.min.js"></script>
        <!-- app js -->
        <script type="text/javascript" src = "/public/js/myApp.js"></script>
    </body>

</html>
