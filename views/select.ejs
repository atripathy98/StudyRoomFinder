<div class="ui centered grid sub-page" ng-controller = "selectController">
    <div class = "row">
        <div class = "ui steps">
            <div class = "active step">
                <i class="home icon"></i>
                <div class = "content">
                    <div class = "title">
                        Select Room
                    </div>
                    <div class = "description">
                        Choose potential rooms in library
                    </div>
                </div>
            </div>
            <div class = "step">
                <i class = "calendar alternate outline icon"></i>
                <div class = "content">
                    <div class = "title">
                        Select Time Slot
                    </div>
                    <div class = "description">
                        Choose a maximum 2-hour slot
                    </div>
                </div>
            </div>
            <div class = "step">
                <i class = "info icon"></i>
                <div class = "content">
                    <div class = "title">
                        Confrim Time Slot
                    </div>
                    <div class = "description">
                        Verify reservation information
                    </div>
                </div>
            </div>
            <div class = "step">
                <i class = "bullseye icon"></i>
                <div class = "content">
                    <div class = "title">
                        Success
                    </div>
                    <div class = "description">
                        Receive Confirmation Email
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class = "row">
        <div class="ui form">
          <div class="three fields">
            <div class="field">
              <label>Location Name</label>
              <input type="text" placeholder="Location" ng-model="locname">
            </div>
            <div class="field">
              <label>Room #</label>
              <input type="text" placeholder="Room #" ng-model="roomnum">
            </div>
            <div class="field">
              <label>Min Capacity</label>
              <input type="text" placeholder="Min capacity" ng-model="capacity">
            </div>
          </div>
        </div>
        <div class = "sixteen wide column">
            <table class = "ui definition table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Location</th>
                        <th>Room #</th>
                        <th>Floor Plan</th>
                        <th>Max Seats</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat = "room in rooms | filterRoomSearch:locname:roomnum:capacity">
                        <td>{{$index + 1}}</td>
                        <td>{{room.locname}}</td>
                        <td>{{room.roomnum}}</td>
                        <td><a ng-href="{{room.floorplan}}">Floor Plan</a> </td>
                        <td>{{room.maxseats}}</td>
                        <td><a ng-click="reserveRoom(room)">Reserve</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</div>
