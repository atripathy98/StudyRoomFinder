<!DOCTYPE html>
    <head>
        <title>
            RPI Room Finder
        </title>
        <!-- <link rel="stylesheet" type="text/css" href="semantic/semantic.min.css"> -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css">
        <link rel="stylesheet" href="/public/css/main.css">
        <meta charset="utf-8">
    </head>

    <body id = "main">
        <!-- web nav bar -->
        <nav class="ui inverted menu">
            <h3 class="header item">RPI Room Finder</h3>
            <span class="right floated text item">
                <p>Welcome, <%= name %>!&nbsp; &nbsp; &nbsp;<a href="/logout">Logout</a></p>
            </span>
        </nav>

        <div class="ui grid sub-page">
            <div class = "sixteen wide column">
                <h3>Managing Rooms</h3>
                <table class = "ui definition table">
                    <thead>
                        <tr>
                            <th>id</th>
                            <th>Room</th>
                            <th>Location</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>401</td>
                            <td>Library</td>
                            <td><a href="#">Modify</a>&nbsp;&nbsp;&nbsp;<a href="#">Delete</a></td>
                        </tr>
                        <!-- using angualar etc. later for more information -->
                    </tbody>
                </table>
                <a class = "ui mini button" href="/adloc">Add New Location</a>
                <a class = "ui mini button" href = "/adrom">Add New Room</a>
            </div>
            <div class = "sixteen wide column">
            <h3>Managing Reservations</h3>
            <table class = "ui definition table">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Room</th>
                        <th>Users</th>
                        <th>Start</th>
                        <th>Duration</th>
                        <th>Status</th>

                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>401</td>
                        <td>ghaie3</td>
                        <td>2pm, Feb 25th, 2018</td>
                        <td>2 hour </td>
                        <td>Not completed</td>
                        <td><a href="#">Change</a>&nbsp;&nbsp;&nbsp;<a href="#">Cancel</a></td>
                    </tr>
                    <!-- using angualar etc. later for more information -->
                </tbody>
            </table>
            <a class = "ui mini button" href = "/adres">Add New Reservations</a>
            </div>

        </div>
        <!-- jquery -->
        <script src="/public/js/jquery.min.js"></script>
        <script src="/public/js/tether.min.js"></script>
        <!-- semantic-ui -->
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.js"></script>
        <!-- angular -->
        <script src="/public/js/angular.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular-resource.min.js"></script>
        <!-- angular router -->
        <script src="//unpkg.com/@uirouter/angularjs/release/angular-ui-router.min.js"></script>
        <!-- app js -->
        <script type="text/javascript" src = "/public/js/myApp.js"></script>
    </body>

</html>
